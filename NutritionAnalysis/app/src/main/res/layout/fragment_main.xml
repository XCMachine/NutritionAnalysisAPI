<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment"
    android:layout_margin="9dp">

    <TextView
        android:id="@+id/calories_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/calories_change_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/calories_tv"
        />

    <TextView
        android:id="@+id/total_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_weight"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/calories_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/total_weight_change_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_weight_test"
        app:layout_constraintTop_toBottomOf="@id/calories_change_data"
        app:layout_constraintStart_toEndOf="@id/total_weight_tv"
        />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_header"
        android:layout_marginTop="15dp"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/total_weight_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--This is for Energy Kcal labels-->
    <LinearLayout
        android:id="@+id/linear_energy_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/label_enerc_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/label_enerc_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/label_enerc_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <!--This is for Pronct Kcal labels-->
    <LinearLayout
        android:id="@+id/linear_pronct_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_energy_container"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/label_procnt_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/label_procnt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/label_procnt_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <!--This is for Fat Kcal labels-->
    <LinearLayout
        android:id="@+id/linear_fat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_pronct_container"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/label_fat_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/label_fat_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/label_fat_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <!--This is for Chocdf Kcal labels-->
    <LinearLayout
        android:id="@+id/linear_chocdf_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_fat_container"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/label_chocdf_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/label_chocdf_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/label_chocdf_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>