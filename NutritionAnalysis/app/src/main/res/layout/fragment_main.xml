<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment"
    android:layout_margin="9dp">

    <TextView
        android:id="@+id/calories_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/calories_change_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/calories_tv"
        />

    <TextView
        android:id="@+id/total_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/totalweight"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/calories_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/total_weight_change_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_weight_test"
        app:layout_constraintTop_toBottomOf="@id/calories_change_data"
        app:layout_constraintStart_toEndOf="@id/total_weight_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>